<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Rahel Angela Carolina</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <style>
      body {
        background-color: #ffffff;
        font-family: Times, "Times New Roman", Georgia, serif;
      }
      .navbar {
        background-color: #473C30;
      }
      .navbar-brand {
        margin: auto;
        color: #f8e6d4;
        font-size: 30px;
        font-weight: bold;
      }
      th, td {
        color: #555555;
      }
      th {
        width: 10%;
      }
      .table-group-divider tbody tr:last-of-type {
        border-bottom: none;
      }
      .btn {
        font-family: Times, "Times New Roman", Georgia, serif;
        color: #f8e6d4;
        font-size: 15px;
      }
      .modal-header {
        background-color: #E4BE99;
        border-bottom: none;
        padding-bottom: 10px;
      }
      .modal-title {
        color: #473C30;
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 0;
      }
      .modal-body {
        color: #555555;
      }
      .form-label {
        color: #555555;
        font-weight: bold;
      }
      .form-control {
        border-color: #473C30;
      }
      .btn-primary {
        background-color: #473C30;
        border-color: #473C30;
      }
      .btn-primary:hover {
        background-color: #87a3c2;
        border-color: #473C30;
      }
      .btn-primary:focus {
        box-shadow: none;
      }
      .btn-secondary {
        background-color: #555555;
        border-color: #555555;
      }
      .btn-secondary:hover {
        background-color: #444444;
        border-color: #444444;
      }
      .btn-secondary:focus {
        box-shadow: none;
      }
    </style>
  </head>
  <body>
    <nav class="navbar">
      <div class="container-fluid">
        <a class="navbar-brand">
          Rahel Angela
        </a>
      </div>
    </nav>
    <div class="container">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Nama</th>
            <th scope="col">NIT</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% if (user) { %> <% user.forEach((item)=>{ %>
          <tr>
            <th scope="row"><%= item.id %></th>
            <td><%= item.nama %></td>
            <td><%= item.nit %></td>
            <td>
              <a 
                class="btn btn-success" 
                href="edit/<%= item.id %>">Edit
              </a>
              <a 
                class="btn btn-danger" 
                href="delete/<%= item.id %>">Hapus
              </a></td>
          </tr>
        <%}) %> <% } %>
        </tbody>
      </table>
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Tambah Data
      </button>

      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title" id="exampleModalLabel">Masukkan Data Anda</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Id</label>
                <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="Masukkan Nama">
              </div>
              <div class="mb-3">
                <label for="exampleFormControlInput2" class="form-label">Nama</label>
                <input type="number" class="form-control" id="exampleFormControlInput2" placeholder="Masukkan NIT">
              </div>
              <div class="mb-3">
                <label for="exampleFormControlInput3" class="form-label">NIT</label>
                <input type="number" class="form-control" id="exampleFormControlInput3" placeholder="Masukkan No.Telp">
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
              <button type="button" class="btn btn-primary">Simpan</button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
  </body>
</html>